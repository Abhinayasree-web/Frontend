    </div>

    <!--id selector inline-->
    <div>
    <h2 id="Rudrapu">This is Rudrapu </h2>
    </div>

    <!--universal selector inline-->
    <div>
    <p> I am a friend of  Sagar</p>
    <p> I am a friend of  Sagar</p>
    </div>  

    <!--descendant selector inline-->
    <div>
    <p>This is a descendent selector</p>
    <p>This is a descendent selector</p>

    </div>

    <!--child selector inline-->
    <div>
    <ul>
        <ui>this is winter</ui><br>
        <ui>this is summer</ui><br>
    </ul>
    </div>
    <!--Attribute selector inline-->
    <div>
