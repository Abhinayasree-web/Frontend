    <style>
        .Abhinayasree{
            background-color:blue;
        }
    </style>

    <!--id selector internal css-->
    <style>
         #Rudrapu {
            color:beige;
            width:"150px";
         }
    </style>
    
    <!--universal selector internal css-->
    <style>
        * {
            Height:"200px";
            color:green;

        }
    </style>

    <!-- descendent selectorinternal css-->
    <style>
        div p {
            color:yellow;
        }
    </style>

    <!--child selector child css-->
    <style>
        ul>ui{
            background-color: gray;
        }
    </style>

    <!--attribute selector internal css-->
    <style>
        input[type="text"] {
            color:cadetblue;
        }

        input[type="text"] {
            color:cadetblue;
        }


    </style>

    <!--grouping selector internal css-->
    <style>
        h1,h2,h3 {
            color:darkmagenta;
        }
    </style>
    

    <!--external css link-->
    <link rel="stylesheet" href="typeofelements.css">
</head>
<body>
    <!--style-->
    <p style="color:red;">kummari bhavani sagar</p>

    <!--class selector inline--> 
    <div>
